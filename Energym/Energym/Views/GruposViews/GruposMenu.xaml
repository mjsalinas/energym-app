<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Energym.Views.GruposMenu">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Spacing="3" Padding="15" Orientation="Vertical" >
                <Label  Text="Módulo de Grupos" FontSize="Medium" HorizontalTextAlignment="Center"/>
            </StackLayout>
            <StackLayout Spacing="3" Padding="15" Orientation="Vertical">
                <Button x:Name="btnToGruposRegistrar" Text="Registrar Nuevo" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
            <StackLayout Spacing="3" Padding="15" Orientation="Vertical">
                <Button x:Name="btnToGruposModificar" Text="Modificar Existente" Command="{Binding SaveCommand}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>